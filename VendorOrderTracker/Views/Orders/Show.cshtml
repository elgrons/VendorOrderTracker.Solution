@{
  Layout = "_Layout";
}

<h1>Order Details: </h1>
<br>
<h4>Order Title: @Model["order"].Title</h4>
<h5>Order Description: @Model["order"].Description</h5>
<h5>Order Price: @Model["order"].Price</h5>
<h5>Order Due Date: @Model["order"].Date</h5>
<br>
<h3>Vendor: @Model["vendor"].Name</h3>
<h3>Vendor Description: @Model["vendor"].Description</h3>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add Additional Order</a>
<br>
<a href='/vendors/'>Back To List of Vendors</a>